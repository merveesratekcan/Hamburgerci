@model RestaurantApp.UI.Areas.Admin.Models.AdminVMs.AdminAdminUpdateVM
@using RestaurantApp.Domain.Entities
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}
@inject IHtmlLocalizer<ModelResource> Localizer;

<body>

    <!-- Begin page -->
    <div id="layout-wrapper">


        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <div class="main-content">

            <div class="page-content">
                <div class="container-fluid">

                    <!-- start page title -->
                    <div class="row">
                        <div class="col-12">
                            <div class="page-title-box d-flex align-items-center justify-content-between">
                                <h4 class="mb-0 font-size-18">@Localizer["Admin Update Page"]</h4>
                            </div>
                        </div>
                    </div>
                    <!-- end page title -->

                    <div class="row">
                        @* <a href="c:\users\muham\source\repos\hs14hamburgerci\restaurantapp.ui\areas\admin\views\admin\update.cshtml">c:\users\muham\source\repos\hs14hamburgerci\restaurantapp.ui\areas\admin\views\admin\update.cshtml</a> *@
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-body">
                                    <div class="clearfix">
                                        <div class="float-left">
                                            <h4><b> @Localizer["Admin"]</b></h4>
                                        </div>
                                    </div>


                                    <div class="row mt-4">
                                        <div class="col-6">
                                            <form asp-action="Update">
                                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                <div class="form-group">
                                                    <label asp-for="FirstName" class="control-label">@Localizer["First Name"]</label>
                                                    <input asp-for="FirstName" class="form-control" />
                                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="LastName" class="control-label">@Localizer["Last Name"]</label>
                                                    <input asp-for="LastName" class="form-control" />
                                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="Email" class="control-label">@Localizer["Email Address"]</label>
                                                    <input asp-for="Email" class="form-control" />
                                                    <span asp-validation-for="Email" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <input asp-controller="Admin" asp-action="Update" asp-area="Admin" type="submit" value=@Localizer["Save"] class="btn btn-primary" />
                                                </div>

                                            </form>

                                            <br />
                                            <div>
                                                @* <a asp-action="Index">@Localizer["Back"]</a> *@
                                            </div>

                                        </div><!-- end col -->
                                    </div><!-- end row -->


                                </div>
                            </div> <!-- end card-->
                        </div> <!-- end col -->
                    </div>
                    <!-- end row -->

                </div> <!-- container-fluid -->
            </div>
            <!-- End Page-content -->


        </div>
        <!-- end main content-->

    </div>
    <!-- END layout-wrapper -->
    <!-- Overlay-->
    <div class="menu-overlay"></div>

    <style>
        .form-control:hover {
            border: 2px solid red;
        }

        .btn-primary {
            background-color: red;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .btn-primary:hover {
                background-color: #8e24aa;
            }

        .form-group label {
            font-weight: bold;
        }

        body {
            font-family: 'Roboto', sans-serif;
        }
    </style>


</body>
