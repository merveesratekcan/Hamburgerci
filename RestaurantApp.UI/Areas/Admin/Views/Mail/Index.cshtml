@model RestaurantApp.UI.Areas.Admin.Models.MailVMs.MailCreateVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

@inject IHtmlLocalizer<ModelResource> Localizer;



<body>

    <!-- Begin page -->
    <div id="layout-wrapper">


        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <div class="main-content">

            <div class="page-content">
                <div class="container-fluid">

                    <!-- start page title -->
                    <div class="row">
                        <div class="col-12">
                            <div class="page-title-box d-flex align-items-center justify-content-between">
                                <h4 class="mb-0 font-size-18">@Localizer["Mail Page"]</h4>
                            </div>
                        </div>
                    </div>
                    <!-- end page title -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-body">
                                    <div class="clearfix">
                                        <div class="float-left">
                                            <h4>
                                                <b>
                                                    @Localizer["Mail Sending Panel"]

                                                </b>
                                            </h4>
                                        </div>
                                    </div>

                                    <form method="post">

                                        <div class="card-body">
                                            <div class="form-group">
                                                <label for="Email">@Localizer["To"]</label>
                                                <input type="email" class="form-control" asp-for="Email" placeholder="Enter Email">

                                            </div>
                                            <div class="form-group">
                                                <label for="Subject">@Localizer["Subject"]</label>
                                                <input type="text" class="form-control" asp-for="Subject" placeholder="Enter Subject" />

                                            </div>
                                            <div class="form-group">
                                                <label for="Message">@Localizer["Message"]</label>
                                                <textarea class="form-control" asp-for="Message" placeholder="Enter Message"></textarea>
                                            </div>
                                        </div>

                                        <div class="card-action">
                                            <button type="submit" class="btn btn-primary waves-effect waves-light">@Localizer["Send"]</button>
                                        </div>



                                    </form>



                                </div>
                            </div> <!-- end card-->
                        </div> <!-- end col -->
                    </div>
                    <!-- end row -->
                </div> <!-- container-fluid -->
            </div>
            <!-- End Page-content -->



        </div>
        <!-- end main content-->

    </div>
    <!-- END layout-wrapper -->
    <!-- Overlay-->
    <div class="menu-overlay"></div>




</body>

