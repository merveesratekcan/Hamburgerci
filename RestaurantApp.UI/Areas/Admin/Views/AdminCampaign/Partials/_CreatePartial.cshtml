            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Tamam</button>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script>
        $(document).ready(function () {
            var now = new Date();
            var formattedDateTime = now.toISOString().slice(0, 16);

            $('#createCampaignStartDate').val(formattedDateTime);
            $('#createCampaignEndDate').val(formattedDateTime);

            $('form').on('submit', function (e) {
                var startDate = new Date($('#createCampaignStartDate').val());
                var endDate = new Date($('#createCampaignEndDate').val());
                var now = new Date();

                if (endDate <= startDate) {
                    e.preventDefault();
                    $('#dateValidationMessage').text('The campaign end date must be after the start date!');
                    $('#dateValidationModal').modal('show');
                } else if (startDate < now) {
                    e.preventDefault();
                    $('#dateValidationMessage').text('The campaign cannot be applied retroactively!');
                    $('#dateValidationModal').modal('show');
                }
            });
        });
    </script>
} *@

