<div class="modal fade" id="dateValidationModal" tabindex="-1" role="dialog" aria-labelledby="dateValidationModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
