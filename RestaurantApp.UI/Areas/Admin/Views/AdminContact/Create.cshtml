@model RestaurantApp.UI.Areas.Admin.Models.ContactVMs.AdminContactCreateVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<div id="layout-wrapper">
    <div class="main-content">
        <div class="page-content">
            <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="col-xl-10">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="card-title">@Localizer["Create Contact Forms"]</h4>
                                        <form asp-action="Create">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <div class="form-group">
                                                <label asp-for="ContactLocation" class="control-label"></label>
                                                <input asp-for="ContactLocation" class="form-control" />
                                                <span asp-validation-for="ContactLocation" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="ContactNumber" class="control-label"></label>
                                                <input asp-for="ContactNumber" class="form-control" />
                                                <span asp-validation-for="ContactNumber" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="ContactMail" class="control-label"></label>
                                                <input asp-for="ContactMail" class="form-control" />
                                                <span asp-validation-for="ContactMail" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="ContactFooterDescription" class="control-label"></label>
                                                @* <input asp-for="ContactFooterDescription" class="form-control" /> *@
                                                 <span asp-validation-for="ContactFooterDescription" class="text-danger"></span> 
                                                <textarea asp-for="ContactFooterDescription" class="form-control" rows="5"></textarea>
                                            </div>

                                            <button type="submit" class="btn btn-success btn-sm btn-block waves-effect waves-light">
                                                @Localizer["Submit"]
                                            </button>
                                        </form>

                                    </div> <!-- end card-body-->
                                </div> <!-- end card-->
                            </div>

                        </div>
                        <p>
                            <a asp-controller="AdminContact" asp-action="Index" asp-area="Admin" type="button" class="btn btn-outline-info btn-lg btn-block waves-effect waves-light">
                                @Localizer["Back to List"]
                            </a>
                        </p>
                    </div>

                </div>

            </div>

        </div>

    </div>
</div>
