                                        <form asp-action="ForgotPassword" method="post">
                                            <div class="form-group">
                                                <label for="enterpass">Email</label>
                                                <input type="email" class="form-control form-control-user" id="enterpass" placeholder="Enter password">
                                            </div>
                                        <a href="" class="btn btn-success btn-block waves-effect waves-light"> Log In </a>

                                        </form> *@
                                      @*     <form asp-action="ForgotPassword" method="post">
                                            <div>
                                                <label asp-for="Email"></label>
                                                <input asp-for="Email" />
                                            </div>
                                            <button type="submit">@Localizer["Send"]</button>
                                        </form> *@
                                          <form asp-action="ForgotPassword" method="post">
                                            <div class="form-group">
                                               @*  <label asp-for="Email"> </label> *@
                                                <input asp-for="Email"  class="form-control form-control-user" id="enterpass" placeholder="@Localizer["Email Address"]">
                                            </div>

                                            <button type="submit" class="btn btn-primary" id="loginButton">@Localizer["Send"]</button>

                                            @if (TempData["ErrorMessage"] != null)
                                            {
                                                <div class="alert alert-danger mt-2">@TempData["ErrorMessage"]</div>
                                            }


                                        <div class="row mt-5">
                                            <div class="col-12 text-left">
                                                <p class="text-muted"><a asp-controller="Account" asp-action="Login" asp-area="" class="text-muted font-weight-medium ml-1"><b>@Localizer["Back"]</b></a></p>
                                            </div> <!-- end col -->
                                        </div>
                                        </form>
                                        <!-- end row -->
                                    </div> <!-- end .padding-5 -->
                                </div> <!-- end col -->
                            </div> <!-- end row -->
                        </div> <!-- end .w-100 -->
                    </div> <!-- end .d-flex -->
                </div> <!-- end col-->
            </div> <!-- end row -->
        </div>
        <!-- end container -->
    </div>
    <!-- end page -->
    <!-- jQuery  -->
    <script src="~/Admin/vertical/assets/js/jquery.min.js"></script>
    <script src="~/Admin/vertical/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/Admin/vertical/assets/js/metismenu.min.js"></script>
    <script src="~/Admin/vertical/assets/js/waves.js"></script>
    <script src="~/Admin/vertical/assets/js/simplebar.min.js"></script>

    <!-- App js -->
    <script src="~/Admin/vertical/assets/js/theme.js"></script>

</body>

</html>

