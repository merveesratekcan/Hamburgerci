 @model RestaurantApp.UI.Models.AppUser.UserRegisterVM

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/MainLayout/_MainLayout.cshtml";
}
</div>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Form-v6 by Colorlib</title>
    <!-- Mobile Specific Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <!-- Font-->
    <link rel="stylesheet" type="text/css" href="~/colorlib-regform-32/css/nunito-font.css">
    <!-- Main Style Css -->
    <link rel="stylesheet" href="~/colorlib-regform-32/css/style.css" />
</head>
<body class="form-v6">
    <div class="page-content">
        <div class="form-v6-content">
            <div class="form-left">
                <img src="~/colorlib-regform-32/images/register.png" alt="form">
            </div>
            <form asp-action="Register" method="post" class="form-detail">
                <h2>Register Form</h2>
                <div class="form-row">
                    <input asp-for="FirstName" class="input-text" placeholder="Your First Name" required>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-row">
                    <input asp-for="LastName" class="input-text" placeholder="Your Last Name" required>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-row">
                    <input asp-for="Email" type="email" class="input-text" placeholder="Email Address" required>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-row-last">
                    <input type="submit" class="register" value="Register">
                </div>
                <div class="form-row-last">
                    <p class="signup-link" style="text-align: center; margin-top: 20px; color: navy;">
                        Already have an account?
                        <a asp-controller="AppUserAccount" asp-action="Login" style="display: inline-block; padding: 10px 20px; font-size: 16px; font-weight: bold; color: white; background-color: navy; border: none; border-radius: 5px; text-decoration: none; transition: background-color 0.3s ease;">
                            Login
                        </a>
                    </p>
                </div>
            </form>
        </div>
    </div>

</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
